{{#if addNewBlog}}
<h2>Add a new blog post!</h2>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="content">Post</label>
      {{textarea value=content id="content" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image" class="form-control"}}
    </div>

    <button class="btn" {{action 'saveBlog'}}>Save</button>
  </form>
</div>
{{else}}
  <button class="btn" {{action 'blogFormShow'}}>New Post</button>
{{/if}}
