{{#if updateBlogForm}}
<h4>Update {{blog.author}}'s {{blog.title}}</h4>
<div class="">
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" class="form-control" placeholder=blog.author}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" class="form-control" placeholder=blog.title}}
    </div>

    <div class="form-group">
      <label for="content">Post</label>
      {{textarea value=content id="content" class="form-control" placeholder=blog.content}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image" class="form-control" placeholder=blog.image}}
    </div>

    <button class="btn" {{action 'update' blog}}>Update</button>
  </form>
</div>
{{else}}
  <button {{action 'updateBlogForm'}}>Update</button>
{{/if}}
