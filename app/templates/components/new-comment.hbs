
  {{#if addNewComment}}
  <div class="blog-tile">
    <div class="well">
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" class="form-control"}}
        </div>
        <div class="form-group">
          <label for="content">Post</label>
          {{textarea value=content id="content" class="form-control"}}
        </div>
        <button class="btn" {{action 'saveComment'}}>Save</button>
      </form>
    </div>
  </div>
  {{else}}
  <button class="btn" {{action 'commentFormShow'}}>New Comment</button>
  {{/if}}
