{{#if addNewComment}}
<form>
  <div class="form-group">
       <label for="author">Author</label>
       {{input value=author id="author"}}
     </div>
     <div class="form-group">
       <label for="content">Post</label>
       {{textarea value=content id="content"}}
     </div>
     <button {{action 'saveComment'}}>Save</button>
</form>
{{else}}
  <button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
